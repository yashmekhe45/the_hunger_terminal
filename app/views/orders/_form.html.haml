.row
  .card
    .card-action.teal.lighten-4
      %h6
        %i.material-icons.md-36 shopping_cart
        Food Cart
    .card-content
      .order-details
      #order_details
    .card-action.right-align
      %h6
        %span.bag Bag Total :
        %strong ₹
        %strong#total 0
      %h6
        %span.bag Bag Tax :
        %strong ₹
        %strong#tax 0
      %h6
        %span.bag.discount Bag Discount :
        %strong - ₹
        %strong#discount 0
      %h6
        %span.bag Total Payable :
        %strong ₹
        %strong#grand_total 0
      %input.hide.form-control.input-sm#order_total_cost{:type => "text", :value => "0", name: "order[total_cost]"}
      %input.hide.form-control.input-sm#order_terminal_id{:type => "text", :value => @terminal_id, name: "order[terminal_id]"}
    .card-action.right-align
      #place_order
        %button.right-align.btn.btn-success.btn-block.place_order{:type => "submit"}
          Place Order
