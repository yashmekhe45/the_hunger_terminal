%table#table-responsive
  %thead
    %tr
      %th{:style => "width:45%"} Product
      %th{:style => "width:15%"} Price
      %th{:style => "width:8%"} Quantity
      %th.text-center{:style => "width:32%"} Subtotal
  %tbody
    - obj.each do |menu_item|
      %tr{:id => "#{menu_item.id}"} 
        %td{"data-th" => "Product"}
          .row
            .col.s12
              - if menu_item.veg == true
                %h6.product-name.nomargin.veg=link_to menu_item.name, show_comments_path(item_id: menu_item.id), remote: true
                %span
                  = render 'show_rating_stars', rating: menu_item.rating
                %span
                  = link_to show_comments_path(item_id: menu_item.id), remote: true do
                    %i.material-icons{class: 'tiny comment',"aria-label" => "Add Reviews",}comment
                    %i.comment_font Reviews(#{menu_item.reviews.count})
              - else
                %h6.product-name.nomargin.non-veg=link_to menu_item.name, show_comments_path(item_id: menu_item.id), remote: true
                %span
                  = render 'show_rating_stars', rating: menu_item.rating
                %span
                  = link_to show_comments_path(item_id: menu_item.id), remote: true do
                    %i.material-icons{class: 'tiny comment',"aria-label" => "Add Reviews",}comment
                    %i.comment_font Reviews(#{menu_item.reviews.count})
              %small.vendor-name= menu_item.description
              %span.hide.menu_item_id= menu_item.id
        %td
          %span ₹
          %span.price{"data-th" => "Price"}= menu_item.price
        %td{"data-th" => "Quantity"}
          %input.form-control.text-center.item-qty{:type => "number", :value => "0", :min => 0, :max => 10}/
        %td.text-center
          %span ₹
          %span.sub-total{"data-th" => "Subtotal"} 0
